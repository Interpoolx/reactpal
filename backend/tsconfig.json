{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": [
            "ESNext"
        ],
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@reactpress/shared": [
                "../packages/shared/src/index.ts"
            ],
            "@reactpress/core-registry": [
                "../packages/core-registry/src/index.ts"
            ],
            "@reactpress/modules-*": [
                "../packages/modules-*/src/index.ts"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}