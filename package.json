{
  "name": "reactpal",
  "version": "1.0.0",
  "description": "ReactPress 2.0 - Enterprise Multi-Tenant SaaS Platform",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "backend",
    "web"
  ],
  "scripts": {
    "dev": "npm run dev:web",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:web\"",
    "dev:backend": "npm run dev -w backend",
    "dev:web": "npm run dev -w web",
    "build": "npm run build --workspaces --if-present",
    "build:web": "npm run build -w web",
    "build:backend": "npm run build -w backend",
    "prebuild": "npm run db:manifest",
    "deploy": "npm run deploy -w backend",
    "deploy:full": "npm run build && npm run deploy && npm run db:remote:apply",
    "// === Database - Local Development ===": "",
    "db:push": "drizzle-kit push --config drizzle.config.ts",
    "db:sync": "drizzle-kit push --config drizzle.config.ts",
    "db:generate": "drizzle-kit generate --config drizzle.config.ts",
    "db:migrate": "node scripts/d1.cjs migrations apply --local",
    "db:studio": "drizzle-kit studio --config drizzle.config.ts",
    "db:studio:remote": "cross-env USE_REMOTE_DB=true drizzle-kit studio --config drizzle.config.ts",
    "// === Database - Manifest (IMPORTANT!) ===": "",
    "db:manifest": "node scripts/generate-migration-manifest.cjs",
    "db:manifest:check": "cat db/migrations/manifest.json",
    "// === Database - Remote Production ===": "",
    "db:remote:list": "node scripts/d1.cjs migrations list --remote",
    "db:remote:apply": "node scripts/d1.cjs migrations apply --remote",
    "db:remote:status": "node scripts/d1.cjs execute --remote --command=\"SELECT * FROM __drizzle_migrations ORDER BY created_at DESC LIMIT 10\"",
    "// === Database - Sync Workflows ===": "",
    "db:sync:local": "npm run db:generate && npm run db:manifest && npm run db:migrate",
    "db:sync:remote": "npm run db:manifest && node scripts/d1.cjs migrations apply --remote",
    "// === Database - Backup/Restore (New!) ===": "",
    "db:backup:local": "node scripts/d1.cjs backup --local",
    "db:backup:remote": "node scripts/d1.cjs backup --remote",
    "db:restore:local": "node scripts/d1.cjs restore --local",
    "db:restore:remote": "node scripts/d1.cjs restore --remote",
    "// === Database - Info & Debugging ===": "",
    "db:info": "node scripts/d1.cjs info --remote",
    "db:info:local": "node scripts/d1.cjs info --local",
    "db:info:remote": "node scripts/d1.cjs info --remote",
    "db:tables:local": "node scripts/d1.cjs execute --local --command=\"SELECT name FROM sqlite_master WHERE type='table' AND name NOT LIKE 'sqlite_%'\"",
    "db:tables:remote": "node scripts/d1.cjs execute --remote --command=\"SELECT name FROM sqlite_master WHERE type='table' AND name NOT LIKE 'sqlite_%'\""
  },
  "devDependencies": {
    "better-sqlite3": "^12.6.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "wrangler": "^4.57.0"
  }
}
